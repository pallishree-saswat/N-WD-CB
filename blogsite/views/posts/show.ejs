      <form  class="validated-form mt-3" action="/posts/<%=post._id%>/review" method="POST" style="max-width:70%;" novalidate>
  
        <h3>Leave a Comment</h3>
        <div class="mt-3 mb-3">
          
            <textarea class="form-control" placeholder="Write your comment" id="desc" cols="35" rows="1" name="comment" required aria-describedby="button-addon2"></textarea>
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>
       
        <button type="submit" class="btn btn-success">Submit</button>
      </form>



      <div class="mb-3 mt-3">
        <%for(let review of post.reviews){%>
            <div class="card mb-2"style="border: none;" >
                <div class="card-header" style="border: none;">
                  User
                </div>
                <div class="card-body">
                
                  <p class="card-text"><%=review.comment%></p>
                </div>
              </div>

        <%}%>
    </div>
